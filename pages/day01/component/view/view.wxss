/* pages/component/view/view.wxss */
.normal_view view{
  width: 100px;
  height: 100px;
  text-align: center;
  line-height: 100px;
  
}

.normal_view view:nth-child(1){
  background-color: aqua;
}
.normal_view view:nth-child(2){
  background-color: blueviolet;
}
.normal_view view:nth-child(3){
  background-color: cadetblue;
}
.normal_view {
  display: flex;
  justify-content:space-around;
}

/*scroll view*/
.scroll_view{
  display: flex;
  justify-content:space-around;
}

/* scroll view-y*/
.scroll_view_y view{
  width: 100px;
  height: 100px;
  text-align: center;
  line-height: 100px;
  
}

.scroll_view_y view:nth-child(1){
  background-color: aqua;
  display: inline-block;
}
.scroll_view_y view:nth-child(2){
  background-color: blueviolet;
  display: inline-block;
}
.scroll_view_y view:nth-child(3){
  background-color: cadetblue;
  display: inline-block;
}
.scroll_view_y {
  margin-top:15px;
  margin-left: 11px;
  border: 1px solid blueviolet;
  height: 130px;
  width: 100px;
}

/* scroll view-x*/
.scroll_view_x view{
  width: 100px;
  height: 100px;
  text-align: center;
  line-height: 100px;
  
}

.scroll_view_x view:nth-child(1){
  background-color: aqua;
  display: inline-block;
}
.scroll_view_x view:nth-child(2){
  background-color: blueviolet;
  display: inline-block;
}
.scroll_view_x view:nth-child(3){
  background-color: cadetblue;
  display: inline-block;
}
.scroll_view_x {

  display: flex;
  white-space: nowrap;
  margin-top:15px;
  margin-left: 11px;
  border: 1px solid blueviolet;
  
  height: 100px;
  width: 130px;
}

/*swiper view */
.swiper{
  /*width: 370px;*/
  height: 120px;
}

.swiper_item{
  height: 100px;
  line-height: 100px;
